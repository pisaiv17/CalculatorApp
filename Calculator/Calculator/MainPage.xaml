<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            
            <Entry Grid.Row="0" Grid.Column="0"></Entry>
            
            <Button Grid.Row="1" Grid.Column="0" Text="C"></Button>
            <Button Grid.Row="1" Grid.Column="1" Text="("></Button>
            <Button Grid.Row="1" Grid.Column="2" Text=")"></Button>
            <Button Grid.Row="1" Grid.Column="3" Text="/"></Button>
            
            <Button Grid.Row="2" Grid.Column="0" Text="7"></Button>
            <Button Grid.Row="2" Grid.Column="1" Text="8"></Button>
            <Button Grid.Row="2" Grid.Column="2" Text="9"></Button>
            <Button Grid.Row="2" Grid.Column="3" Text="*"></Button>
            
            <Button Grid.Row="3" Grid.Column="0" Text="4"></Button>
            <Button Grid.Row="3" Grid.Column="1" Text="5"></Button>
            <Button Grid.Row="3" Grid.Column="2" Text="6"></Button>
            <Button Grid.Row="3" Grid.Column="3" Text="-"></Button>
            
            <Button Grid.Row="4" Grid.Column="0" Text="1"></Button>
            <Button Grid.Row="4" Grid.Column="1" Text="2"></Button>
            <Button Grid.Row="4" Grid.Column="2" Text="3"></Button>
            <Button Grid.Row="4" Grid.Column="3" Text="+"></Button>
            
            <Button Grid.Row="5" Grid.Column="1" Text="0"></Button>
            <Button Grid.Row="5" Grid.Column="2" Text="."></Button>
            <Button Grid.Row="5" Grid.Column="3" Text="="></Button>
        </Grid>
    </StackLayout>

</ContentPage>
